<div class="container">
  <div class="row">
    <div class="col-md-3">
  <%= render 'users/list', user: @user, book: @book %>
    </div>
    <div class="col-md-8 offset-md-1">
      <h2>Book detail</h2>
    <table class="table">
      <tbody>
        <tr>
          <td>
            <%= link_to user_path do %>
              <%= image_tag @user.get_profile_image(100,100) %><br>
              <%= link_to @user.name,user_path(@user.id) %>
            <% end %>
          </td>
          <td>
            <%= link_to @books.title,book_path(@books.id) %>
          </td>
          <td>
            <%= @books.body %>
          </td>
          <td>
            <% if @books.user == current_user %>
              <%= link_to "Edit", edit_book_path(@books.id), class: "btn btn-sm btn-success edit_book_658" %>
          </td>
            <% end %>
          <td>
            <% if @books.user == current_user %>
              <%= link_to "Destroy", book_path(@books.id), class: "btn btn-sm btn-danger destroy_book_658", method: :delete, "data-confirm" => "本当に消しますか？" %>
          </td>
            <% end %>
        </tr>
      </tbody>
    </table>
    </div>
  </div>
</div>





